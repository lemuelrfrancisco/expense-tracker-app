{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "store/auth-context.tsx",
    "app/(app)/manage-expenses.js",
    "app/_layout.js",
    "app/(app)/_layout.js",
    "app/(app)/+html.tsx",
    "app/(app)/+not-found.tsx",
    "app/(app)/(tabs)/_layout.js"
  ]
}

